<div class="container">

  <h1 align="center" class="display-2">All Alpha Bloggers </h1>
    <div align="center">
    <% @users.each do |user| %>
      
        <div class="card bg-light text-center col-sm-6">
          <div class="card-body">
            <ul class="listing">
              <li><%= link_to gravatar_for(user), user_path(user) %></li>
              <li><%= link_to user.username, user_path(user) %></li>
              <li><small><%= pluralize(user.articles.count, "articles") if user.articles %></small></li>
              <% if logged_in? and current_user.admin? %>
                <li><%= link_to "Delete this user",user_path(user), 
                method: :delete, 
                data: { confirm: "Are you sure you want to delete this user and all articles associated with this user"} %></li>
              <% end %>
            </ul>    
          </div>
        </div>
      
    <% end %>

    <div class="pagination justify-content-center">
      <%= will_paginate %>
    </div>

    </div>  
  
</div>