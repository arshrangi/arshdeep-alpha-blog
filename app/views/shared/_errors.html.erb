<% if obj.errors.any? %>
  <div>
    <div class="container">
      <div class="alert alert-danger" role="alert">
        <h2 class="alert-heading">Oops! Something went wrong</h2>
        <p><%= pluralize(obj.errors.count, "error") %>
          prohibited this article from being saved:</p>
        <hr>
        <% obj.errors.full_messages.each do |msg| %>
            <p><%= msg %></p>
        <% end %>
      </div>
    </div>
  </div>
<% end %>